<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <TextView
            android:text="Latest reliable msg:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/msgs_reliable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:text="Latest unreliable msg:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/msgs_unreliable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <SurfaceView
            android:id="@+id/surface_view"
            android:layout_marginTop="20dp"
            android:layout_width="@dimen/field_width"
            android:layout_height="@dimen/field_height"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>

    <Button
        android:id="@+id/button_stop_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Stop Game"
        />

</RelativeLayout>
